@{
    var Artists = (List<ArtistModel>)ViewData["Artists"];
}


<div>

    <h5>Add Artists</h5>
    <i class="large material-icons"><a href="/Artists/Create" class="btn btn-dark">add_circle</a></i>

</div>
<h1 style="text-align: center; color:#807b74 ">Artists</h1>


<div class="container">
    <div class="row">

        @foreach (var item in Artists)
        {

            <div class="col-4" style="margin-top:10%; text-align:center">
                <div class="card mb-3">
                    <h3 class="card-header">@item.ArtName</h3>
                    <div class="card-body">
                        <img class="card-img-top" src="@item.ArtImg" alt="Card image cap" height="200" width="80">
                    </div>

                    <div class="card-body">
                        <a href="/Artists/Details/@item.ArtId" class="btn btn-dark">Read More</a>
                    </div>
                    <a asp-controller="Artists" asp-action="Edit" asp-route-id="@item.ArtId"><i class="large material-icons">create</i></a>
                    <a asp-controller="Artists" asp-action="Delete" asp-route-id="@item.ArtId"><i class="large material-icons" style="color: red"> delete_forever</i></a>

                </div>
            </div>


        }

    </div>
</div>